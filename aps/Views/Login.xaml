<Page x:Class="aps.Views.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:aps.Views"
      xmlns:userControls="clr-namespace:aps.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="250"
      Title="Login">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <userControls:TextBoxNew x:Name="txtNome" Height="35" Width="150" Margin="5" Placeholder="Nome"/>
            <userControls:TextBoxNew x:Name="txtSenha" Height="35" Width="150" Placeholder="Senha" />
            <Button Content="Entar" Margin="5" Height="30" Width="60" Click="Button_Click"></Button>
            <Button Content="Voltar" Margin="5" Height="30" Width="60" Click="Button_Back"></Button>
        </StackPanel>
    </Grid>
</Page>
