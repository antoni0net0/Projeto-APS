<Page x:Class="aps.Views.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:aps.Views"
      xmlns:userControls="clr-namespace:aps.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="300"
      Title="Login">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Insira seus dados de login" FontWeight="SemiBold" FontSize="15" HorizontalAlignment="Center" Margin="10"/>
            <userControls:TextBoxNew x:Name="txtNome" Height="45" Width="170" Margin="5" Placeholder="Nome"/>
            <userControls:TextBoxNew x:Name="txtSenha" Height="45" Width="170" Margin="5" Placeholder="Senha" />
            <Button Content="Entrar" Style="{StaticResource ConfirmButtonStyle}" Height="40" Width="80" Click="Button_Click"></Button>
            <Button Content="Voltar" Style="{StaticResource CancelButtonStyle}"  Margin="5" Height="40" Width="80" Click="Button_Back"></Button>
        </StackPanel>
    </Grid>
</Page>
