<Page x:Class="aps.Views.Landing"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:aps.Views"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="300"
      Title="Landing">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="APS soluçoes" HorizontalAlignment="Center" FontSize="25" FontWeight="SemiBold" Margin="10"/>
            <Button Content="Entrar" Style="{StaticResource ConfirmButtonStyle}" Height="50" Width="150" Margin="5" Click="Button_Click"></Button>
            <Button Content="Registrar" Style="{StaticResource ConfirmButtonStyle}" Height="50" Width="150" Click="Register_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
